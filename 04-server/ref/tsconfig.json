{
    "compilerOptions": {
        "incremental": true,
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "es2017"
        ],
        "types": [
            "node"
        ],
        "outDir": "./build",
        "rootDir": "./",
        "strict": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strictNullChecks": false,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}